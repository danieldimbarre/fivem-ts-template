{
    "compilerOptions": {
        "strict": true,
        "target": "ES2020",
        "lib": [ "ES2020" ],
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [ "@citizenfx/server", "@types/node" ],
        "paths": {
            "@server/*": [
                "./*"
            ],
            "@common": [ 
                "../common/index.ts" 
            ],
            "@common/*": [ 
                "../common/*"
            ],
            "@/*": [ "../*" ],
            "@@/*": [ "../../*" ]
        },
    },
    "include": [
        "./",
        "../common"
    ],
    "exclude": [ "**/node_modules", "**/__tests__/*" ]
}